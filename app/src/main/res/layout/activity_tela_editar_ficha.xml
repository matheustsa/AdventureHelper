<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txv_titulo_editarFicha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="Editar Ficha"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_nomePersonagem"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Nome do Personagem"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txv_titulo_editarFicha" />

        <EditText
            android:id="@+id/editText_racaPersonagem"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="RaÃ§a"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="@+id/editText_nomePersonagem"
            app:layout_constraintTop_toBottomOf="@+id/editText_nomePersonagem"
            tools:layout_editor_absoluteY="155dp" />

        <EditText
            android:id="@+id/editText_classePersonagem"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="Classe"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/editText_racaPersonagem"
            app:layout_constraintRight_toRightOf="@+id/editText_nomePersonagem"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintTop_toTopOf="@+id/editText_racaPersonagem"
            android:layout_marginTop="0dp" />

        <EditText
            android:id="@+id/editText_forca"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="FOR"
            android:inputType="number"
            app:layout_constraintLeft_toLeftOf="@+id/editText_racaPersonagem"
            app:layout_constraintTop_toBottomOf="@+id/editText_racaPersonagem" />

        <EditText
            android:id="@+id/editText_destreza"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="DES"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@+id/editText_forca"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/editText_forca"
            android:layout_marginTop="0dp" />

        <EditText
            android:id="@+id/editText_constituicao"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="CON"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_forca"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText_forca" />

        <EditText
            android:id="@+id/editText_inteligencia"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="INT"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@+id/editText_constituicao"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/editText_constituicao"
            android:layout_marginTop="0dp" />

        <EditText
            android:id="@+id/editText_sabedoria"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="SAB"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_constituicao"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText_constituicao" />

        <EditText
            android:id="@+id/editText_carisma"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="CAR"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@+id/editText_sabedoria"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/editText_sabedoria"
            android:layout_marginTop="0dp" />

        <EditText
            android:id="@+id/editText_lvl"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="LVL"
            android:inputType="number"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText_classePersonagem"
            app:layout_constraintTop_toTopOf="@+id/editText_destreza"
            android:layout_marginTop="0dp" />

        <EditText
            android:id="@+id/editText_pontosdevida"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="PV"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@+id/editText_lvl"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/editText_lvl"
            android:layout_marginTop="0dp" />

        <Button
            android:id="@+id/bt_editarFicha_salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="32dp"
            android:text="Salvar e VOltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_carisma" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>
