<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Desert" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/cooper</item>
        <item name="colorPrimaryDark">@color/darkcooper</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorBackground">@color/papper</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:textColor">@color/clay</item>
    </style>

</resources>
